    "package": "bash ./create-minima-app/package.sh",
    "postbuild": "node ./create-minima-app/postbuild.js",
    "zip": "npm run build && npm run postbuild && npm run package"
  },
  "dependencies": {
    "@theme-toggles/react": "^4.1.0",
    "@vitejs/plugin-legacy": "^4.1.1",
