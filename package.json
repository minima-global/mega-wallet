{
  "name": "publicWallet",
  "private": true,
  "version": "2.5.1",
  "type": "module",
  "description": "This wallet enables you to send, receive, and store Minima, custom tokens, and NFTs without running a Minima node.",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
